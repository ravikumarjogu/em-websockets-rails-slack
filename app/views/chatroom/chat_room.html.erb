<div class="container">

  <%= render 'shim/profile_header' %>
<div class='row'>

  <div class="col-md-4">
    <div id="channels">
      <% @channels.each do |channel| %>
        <div ><a class="group" href="#"><%= channel %></a></div>
      <% end %>
    </div>
    <form id='enter_chat_room' role='form'>

      <div class="form-group">
        <label for="chat_room"></label>
        <input type="text" class="form-control" id="chat_room" placeholder="create new group">
         
      </div>

      <div class="form-group" style="display:none">
        <label for="user_name">Name</label>
        <input type="text" class="form-control" id="user_name" value="<%= current_user.username || current_user.email %>" style="display:none">
      </div>

     <button type="submit" class="btn btn-default" style="display:none">Create</button>

    </form>
    <div class="notifications">
      <h3>#<span class="section_title">Nofifications</span></h3>
      <dl id="notifications" class="wrap_notifications dl-horizontal"></dl>
    </div>
    
    
  </div>

  <div class="col-md-8" id="channel_body">
    <h3>#<span id="conversation_group" class="section_title">All Channels </span></h3>
    <form id="add_members_to_group" role="form" style="display:none">
      <div class="form-group">
        <label for="member"></label>
        <input type="text" class="form-control" id="member_name" placeholder="Add member">


      </div>
      <button type="submit" class="btn btn-default" style="display:none"></button>
    </form>
    
    <div id="groups">
    <% @channels.each do |channel| %>
      <dl id="<%= channel %>" class="dl-horizontal wrap_group close_it"></dl>
    <% end %>
    
    </div>

    <!-- for more chat boxes -->

    <div id="messages-input-container" style="height:42px">
      <form id='send_message' role='form'>

      <div class="form-group">
        <input type="text" class="form-control" style="display:none" id="chat_room_ro" readonly>
      </div>

      <div class="form-group">
        

        

           <input type="text" class="form-control" id="message" placeholder="Enter message" data-emojiable="true" data-emoji-input="unicode"> 
